generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id_Usuario         Int         @id @default(autoincrement())
  username           String      @db.VarChar(25)
  correo             String      @db.VarChar(60)
  contraseña         String      @db.VarChar(200)
  rol                String      @default("usuario")
  activo             Boolean     @default(false)
  confirmationToken  String?     @db.VarChar(100)
  resetPasswordToken String?     @db.VarChar(100)
  resetPasswordExpires DateTime?
  avatar             String?     @db.Text
  racha              Int         @default(0)
  ultimoLogin        DateTime?   
  experiencia        Int         @default(0)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  progresos          Progresos[]

  @@map("Usuarios")
}

model Progresos {
  id                   Int       @id @default(autoincrement())
  progreso             Int
  usuario              User      @relation(fields: [Usuarios_id_Usuario], references: [id_Usuario])
  Usuarios_id_Usuario  Int
  leccion              Lecciones @relation(fields: [Lecciones_id_Leccion], references: [id_Leccion])
  Lecciones_id_Leccion Int
}

model Lecciones {
  id_Leccion Int         @id @default(autoincrement())
  // Ampliado de 45 a 150 para permitir títulos más descriptivos
  Titulo     String      @db.VarChar(150)
  progresos  Progresos[]
  retos      Retos[]
}

model Retos {
  id_Reto              Int        @id @default(autoincrement())
  tipo                 String     @default("reto") @db.VarChar(20) // 'reto' o 'explicacion'
  // Ampliado de 300 a 500 para permitir descripciones más completas
  descripcion          String     @db.VarChar(500)
  contenido            String?    @db.Text // Para explicaciones: contenido HTML/Markdown extenso
  // Ampliado de 100 a 200 para retroalimentaciones más ricas
  Retroalimentacion    String?    @db.VarChar(200)
  leccion              Lecciones  @relation(fields: [Lecciones_id_Leccion], references: [id_Leccion])
  Lecciones_id_Leccion Int
  comandos             Comandos[]
}

model Comandos {
  id_Comando    Int    @id @default(autoincrement())
  // Ampliado de 45 a 100 para permitir comandos con múltiples flags
  comando       String @db.VarChar(100)
  reto          Retos  @relation(fields: [Retos_id_Reto], references: [id_Reto])
  Retos_id_Reto Int
}
